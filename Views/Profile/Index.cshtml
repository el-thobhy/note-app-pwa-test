@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userName = Context.Session.GetString("UserName") ?? "";
    var profile = Context.Session.GetString("Avatar") ?? "";
    var fullName = Context.Session.GetString("FullName") ?? "";
    var role = Context.Session.GetString("Roles") ?? "";
    string avatar = !string.IsNullOrEmpty(profile) ? profile : $"https://ui-avatars.com/api/?name={userName}&background=random&color=ffffff&size=32";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">Dashboard /</span> Profile
    </h4>
    <div class="row">
        <!-- Header -->
        <div class="col-12 w-100">
            <div class="card mb-4">
                <div class="user-profile-header-banner">
                    <img src="../../frest/assets/img/pages/profile-banner.png" alt="Banner image" class="rounded-top w-100" />
                </div>
                <div class="user-profile-header d-flex flex-column flex-sm-row text-sm-start text-center mb-4">
                    <div class="flex-shrink-0 mt-n5 mx-sm-0 mx-auto">
                        <img src="@avatar"
                             alt="user image"
                             width="120px"
                             class="d-block h-auto ms-0 ms-sm-4 rounded-3 user-profile-img" />
                    </div>
                    <div class="flex-grow-1 mt-3 mt-sm-5">
                        <div class="d-flex align-items-md-end align-items-sm-start align-items-center justify-content-md-between justify-content-start mx-4 flex-md-row flex-column gap-4">
                            <div class="user-profile-info">
                                <h4>@fullName</h4>
                                <ul class="list-inline mb-0 d-flex align-items-center flex-wrap justify-content-sm-start justify-content-center gap-2">
                                    <li class="list-inline-item fw-semibold"><i class="bx bx-pen"></i> </li>
                                    <li class="list-inline-item fw-semibold"><i class="bx bx-map"></i> </li>
                                </ul>
                            </div>
                            <div>
                                <a href="#" class="btn btn-primary btn-sm">
                                    <i class='bx bx-envelope me-1'></i> Email
                                </a>
                                <a href="#" target="_blank" class="btn btn-dark btn-sm">
                                    <i class='bx bxl-github me-1'></i> GitHub
                                </a>

                                <a href="#" target="_blank" class="btn btn-primary btn-sm text-nowrap">
                                    <i class="bx bx-user-check me-1"></i>Connected
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ Header -->
        <!-- Right column: Detailed Info -->
        <div class="col-md-8 w-100">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title"><i class="bx bx-user-pin"></i> About Me</h5>
                    <p>
                        
                    </p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title"><i class='bx bx-code-alt'></i> Skills</h5>
                    <ul class="list-unstyled mb-0">
                        <li><i class="bx bx-check-circle"></i></li>
                    </ul>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title"><i class='bx bx-folder'></i> Latest Projects</h5>
                    <ul class="list-unstyled">
                        <li>
                            <strong></strong>
                            <p class="mb-1"></p>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class='bx bx-graduation'></i>Education</h5>
                    <p class="mb-1"></p>
                    <p class="mb-0"></p>
                </div>
            </div>
        </div>
    </div>
</div>
